{
  "openapi": "3.0.3",
  "info": {
    "title": "Backend-web-service",
    "description": "Documentation about the APIs",
    "version": "1.0.0"
  },
  "basePath": "/api/v1",
  "servers": [{"url": "/api/v1"}],
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    }
  },
  "paths": {
    "/user": {
      "post": {
        "operationId": "createUser",
        "tags": ["User"],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string",
                    "required": true
                  },
                  "email": {
                    "type": "string",
                    "required": true
                  },
                  "password": {
                    "type": "string",
                    "required": true
                  }
                },
                "example": {
                  "name": "Will",
                  "email": "will@example.com",
                  "password": "1234"
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "User created successfully"
          },
          "400": {
            "description": "field is required"
          }
        }
      },
      "get": {
        "summary": "Get All User",
        "operationId": "getAllUser",
        "tags": ["User"],
        "security": [{ "bearerAuth": [] }],
        "responses": {
          "200": {
            "description": "OK"
          },
          "401": {
            "description": "Unauthorized"
          },
          "404": {
            "description": "User Not Found"
          }
        }
      }
    },
    "/user/{_id}": {
      "put": {
        "operationId": "updateUserId",
        "tags": ["User"],
        "summary": "Update a user",
        "security": [{ "bearerAuth": [] }],
        "parameters": [
          {
            "in": "query",
            "name": "_id",
            "type": "string",
            "required": true
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string",
                    "required": false
                  },
                  "password": {
                    "type": "string",
                    "required": false
                  }
                },
                "example": {
                  "name": "Will",
                  "password": "1234"
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "User updated successfully"
          },
          "400": {
            "description": "Field is required"
          },
          "401": {
            "description": "Unauthorized"
          },
          "404": {
            "description": "User Not Found"
          }
        }
      }
    },
    "/api-info": {
      "post": {
        "operationId": "createUser",
        "tags": ["Api"],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "routeName": {
                    "type": "string",
                    "required": true,
                  },
                  "endpointPath": {
                    "type": "string",
                    "required": true
                  },
                  "typeRequest": {
                    "type": "string",
                    "required": true
                  },
                  "dataReturnRequest": {
                    "type": "boolean",
                    "required": true
                  }
                },
                "example": {
                  "routeName": "Users",
                  "endpointPath": "/users",
                  "typeRequest": "get",
                  "dataReturnAllowed": true
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Api info created successfully"
          },
          "400": {
            "description": "field is required"
          }, 
          "401": {
            "description": "Unauthorized"
          }
        }
      }
    }
  }
  
}